---
import Layout from "../../layouts/Layout.astro"
import { getLangFromUrl } from '../../i18n/utils';
import SectionContainer from "../../components/SectionContainer.astro";

const lang = getLangFromUrl(Astro.url);

---
<Layout  
title = "About"
description = "Learn more about Taylor's Studio" 
language = {lang}>
  <main class="mt-20">
      <SectionContainer>
        
            <div class="mx-auto max-w-6xl px-6 pt-5 lg:px-8">
                <h2 class="mt-2 text-4xl font-bold tracking-tight text-richOrange sm:text-5xl text-center">Get a quote</h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">Use the form below to provide us with some details about your project or specific needs. We'll get back to you with a personalized quote tailored to your requirements.</p>
                
                <!-- Form Embed Code -->
                <div class="py-2 mt-6">
                    <script defer>
                        hbspt.forms.create({
                            portalId: "",
                            formId: "",
                        });
                    </script>
                </div>
                <!-- End Form Embed Code -->

     
            </div>

</SectionContainer>
</main>
</Layout>