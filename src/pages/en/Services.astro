---
import ServiceItem from '../../components/ServiceItem.astro'
import PhoneIcon from '../../icons/PhoneIcon.astro'
ServiceItem
const SERVICES = [
{
    title: 'Design',
    description: "Your website's visuals are crucial in turning visitors into paying customers. Don't let poor design stand in the way.",
    icon: PhoneIcon,
},
{
    title: 'UX/UI',
    description: 'Ensuring your customers and visitors have a consistent experience across all devices and platforms.',
    icon: PhoneIcon,
},
{
    title: 'Branding',
    description: "I'll collaborate with you to develop a branding strategy, or if you already have one, I'll help enhance its visibility.",
    icon: PhoneIcon,
},
{
    title: 'SEO',
    description: "Missing out on customers who can't find you could be costing you significantly. I'll help ensure you're visible in the right places at the right times.",
    icon: PhoneIcon,
},
{
    title: 'Hosting / Maintenance',
    description: "Missing out on customers who can't find you could be costing you significantly. I'll help ensure you're visible in the right places at the right times.",
    icon: PhoneIcon,
},

]
---
<div class="mt-16 sm:mt-20">
    <h2 class="text-3xl text-white font-semibold mb-5 gap-x-3 items-center flex">Services</h2>
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-6  lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8">
        {SERVICES.map(({ title, description, icon }) => (
        <ServiceItem title={ title } description={description} icon={icon} />
        ))}
    </div>

  </div>