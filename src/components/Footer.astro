---
const currentYear = new Date().getFullYear()
import { getLangFromUrl, useTranslations } from '../i18n/utils';


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<footer
  class="opacity-80 m-4 mt-auto w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10 flex justify-center px-3"
>
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto flex flex-col md:flex-row md:items-center md:justify-between gap-2 py-4"
  >
    <!-- Mobile: order-1 (first), Medium and up: order-2 (second) -->
    <span class="text-sm sm:text-center order-2 md:order-1 text-zinc-800/90 dark:text-zinc-200/90">
      Powered with Astro & Tailwind Â© {currentYear}
      <a href="" class="hover:underline">Tay - Music Studio</a>
    </span>

    <!-- Mobile: order-2 (second), Medium and up: order-1 (first) -->
    <ul
      class="flex flex-wrap items-center order-1 md:order-2 mt-3 text-sm font-medium dark:text-white/90 sm:mt-0"
    >
    <li>
      <a href=`/${lang}/#` class="hover:underline me-4 md:me-6">{t('nav.home')}</a>
    </li>
      <li>
        <a href=`/${lang}/About` class="hover:underline me-4 md:me-6">{t('nav.about')}</a>
      </li>
      <li>
        <a id="contacto" href="mailto:tay@..." class="me-4 md:me-6 hover:underline"
          >{t('nav.contact')}</a
        >
      </li>
      <li>
        <a href="#" class="hover:underline me-4 md:me-6">{t('nav.top')}</a>
      </li>
    </ul>
  </div>
</footer>
